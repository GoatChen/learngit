<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 映射类的文件路径 -->
<mapper namespace="com.six.dao.ShopBuyUserMapper">
	<resultMap id="BaseResultMap" type="com.six.pojo.ShopBuyUser">
		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="code" jdbcType="VARCHAR" property="code" />
		<result column="password" jdbcType="VARCHAR" property="password" />
		<result column="phone" jdbcType="VARCHAR" property="phone" />
		<result column="email" jdbcType="VARCHAR" property="email" />
		<result column="name" jdbcType="VARCHAR" property="name" />
		<result column="sex" jdbcType="VARCHAR" property="sex" />
		<result column="birthday" jdbcType="DATE" property="birthday" />
		<result column="picPojoPath" jdbcType="VARCHAR" property="picPojoPath" />
		<result column="picLocalPath" jdbcType="VARCHAR" property="picLocalPath" />
		<result column="ban" jdbcType="VARCHAR" property="ban" />
		<result column="money" jdbcType="FLOAT" property="money" />
		<result column="points" jdbcType="VARCHAR" property="points" />
		<result column="createdBy" jdbcType="INTEGER" property="createdBy" />
		<result column="creationDate" jdbcType="DATE" property="creationDate" />
		<result column="modifyBy" jdbcType="INTEGER" property="modifyBy" />
		<result column="modifyDate" jdbcType="DATE" property="modifyDate" />
	</resultMap>

	<!-- 查询出用户的所有信息 -->
	<select id="selectShopBuyUserById" parameterType="Object"
		resultMap="BaseResultMap">
		select * from shop_buyUser where id=#{id}
	</select>

	<!-- 更新用户信息 -->
	<update id="shopSellUsertoupdateUser" parameterType="com.six.pojo.ShopBuyUser">
		update
		shop_buyUser set
		password=#{password},phone=#{phone},email=#{email},name=#{name},sex=#{sex}
		where id=#{id}
	</update>
	<!-- 更新余额 -->
	<update id="shopSellUsertoupdateMoney">
		update shop_buyUser set money=#{money} where id=#{id}
	</update>

	<!-- 修改头像 -->
	<update id="updatePic" parameterType="com.six.pojo.ShopBuyUser">
		update shop_buyUser set
		picLocalPath=#{picLocalPath} where id=#{id}
	</update>
	
	<!-- 查出图片 -->
	<select id="selectToUpdatePic" parameterType="int" resultType="String">
		select picLocalPath from shop_buyUser where id=#{id}
	</select>
	
	<!-- 查出余额 -->
	<select id="shopBuyUserMoney" parameterType="int" resultType="float">
		select money from shop_buyUser where id=#{id}
	</select>
	
	<!-- 查出当前积分 -->
	<select id="selectShopBuyUserByPoints" parameterType="int" resultType="int">
		select points from shop_buyUser where id=#{id}
	</select>
	
	<!-- 更新积分 -->
	<update id="updateShopBuyUserByPoints">
		update shop_buyUser set
		points=#{points2} where id=#{id}
	</update>
	

</mapper>