<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.six.dao.myMapper.SellUserMapper">

	<!--查询单个卖家信息 -->
	<select id="findSellUser" resultType="com.six.pojo.myEntity.SellUser">
		select shop_selluser.id,shop_selluser.code,shop_selluser.password from shop_selluser
		where code=#{code} and password =#{password}
	</select>
	
	<!--通过id查询卖家所有信息 -->
	<select id="selectSellUserById"
		resultType="com.six.pojo.myEntity.SellUser">
		select * from shop_selluser where id=#{id}
	</select>
	<!-- 更新卖家信息 -->
	<update id="updateSellUser" parameterType="map">
		UPDATE shop_selluser
		<trim prefix="set" suffixOverrides="," suffix=" where id=#{id}">
			<if test="code!=null and code!='' ">
				code=#{code},
			</if>
			<if test="password!=null and password!='' ">
				password=#{password},
			</if>
			<if test="phone!=null and phone!='' ">
				phone=#{phone},
			</if>
			<if test="email!=null and email!='' ">
				email=#{email},
			</if>
			<if test="name!=null and name!='' ">
				name=#{name},
			</if>
			<if test="sex!=null and sex!='' ">
				sex=#{sex},
			</if>
			<if test="birthday!=null">
				birthday=#{birthday},
			</if>
			<if test="picPojoPath!=null and picPojoPath!='' ">
				picPojoPath=#{picPojoPath},
			</if>
			<if test="picLocalPath!=null and picLocalPath!='' ">
				picLocalPath=#{picLocalPath},
			</if>
			<if test="sellName!=null and sellName!='' ">
				sellName=#{sellName},
			</if>
			<if test="modifyDate!=null">
				modifyDate=#{modifyDate},
			</if>
				
		</trim>
	</update>
	
</mapper>
